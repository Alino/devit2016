{
  "servers": [
    {
      "port": 8080,
      "routes": [
        {
          "path": "/api/segments",
          "methods": ["GET"],
          "handler": "frock-static",
          "options": {
            "file": "fixtures/static/segments.json",
            "contentType": "application/json"
          }
        },
        {
          "path": "/api/hello",
          "methods": ["GET"],
          "handler": "./plugins/hello.babel",
          "options": {
            "message": "hello Devit!"
          }
        }
      ]
    }
  ]
}
